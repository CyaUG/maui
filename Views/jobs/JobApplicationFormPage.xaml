<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Youth.Views.jobs.JobApplicationFormPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:Youth.ViewModels"
             xmlns:model="clr-namespace:Youth.Models"
             xmlns:utils="clr-namespace:Youth.Utils"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutItemIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             Shell.PresentationMode="Animated"
             Shell.TabBarIsVisible="False"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:toolkitViews="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             ios:Page.UseSafeArea="true"
             xmlns:renderers="clr-namespace:Youth.CustomRenderers">

    <ContentPage.Resources>
        <Style TargetType="Frame">
            <Setter Property="HasShadow"
                    Value="False"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="CornerRadius"
                    Value="20"/>
            <Setter Property="IsClippedToBounds"
                    Value="True"/>
        </Style>
        <ResourceDictionary>
            <utils:MultiplierConverter x:Key="MultiplierConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>
            <StackLayout
                Orientation="Horizontal"
                VerticalOptions="Center"
                Spacing="10"
                Grid.Row="0"
                Margin="10,20,10,10">

                <Image
                    HorizontalOptions="Start"
                    HeightRequest="30"
                    Source="back.png"
                    BackgroundColor="transparent"
                    VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Btn_Back"/>
                    </Image.GestureRecognizers>
                </Image>

                <Label Text="{Binding Title}"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        
                        Style="{StaticResource TabHeader}"/>
                <Image Source="settings.png"
                        HorizontalOptions="End"
                        HeightRequest="30"/>
            </StackLayout>

            <RefreshView
                x:DataType="local:JobApplicationFormViewModel"
                Command="{Binding LoadJobDetailsCommand}"
                IsRefreshing="{Binding IsBusy}">
                <ScrollView VerticalScrollBarVisibility="Never">
                    <Grid Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                        <StackLayout
                            Orientation="Vertical"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand">
                            <StackLayout Orientation="Vertical"
                                    Margin="5"
                                    Padding="5">
                                <Label Text="{Binding jobModel.jobTitle}"
                                        FontAttributes="Bold"
                                        FontSize="30"/>
                                <Label Text="{Binding jobModel.businessName}"
                                        TextColor="#F2A14E"
                                        FontAttributes="Bold"
                                        FontSize="17"/>
                            </StackLayout>

                            <Frame CornerRadius="5"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                    HasShadow="True"
                                    Margin="5"
                                    Padding="5">
                                <StackLayout Orientation="Horizontal">
                                    <Image Source="profile_icon.png"
                                            Scale="0.7"
                                            WidthRequest="40"
                                            HeightRequest="40"></Image>
                                    <Entry x:Name="Name"
                                            Placeholder="Name"
                                            HorizontalOptions="FillAndExpand"
                                            Text="{Binding NameValue}"></Entry>
                                </StackLayout>
                            </Frame>

                            <Frame CornerRadius="5"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                    HasShadow="True"
                                    Margin="5"
                                    Padding="5">
                                <StackLayout Orientation="Horizontal">
                                    <Image Source="city.png"
                                            Scale="0.7"
                                            WidthRequest="40"
                                            HeightRequest="40"></Image>
                                    <Entry x:Name="City"
                                            Placeholder="City"
                                            HorizontalOptions="FillAndExpand"
                                            Text="{Binding CityValue}"></Entry>
                                </StackLayout>
                            </Frame>

                            <Frame CornerRadius="5"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                    HasShadow="True"
                                    Margin="5"
                                    Padding="5">
                                <StackLayout Orientation="Horizontal">
                                    <Image Source="email.png"
                                            Scale="0.7"
                                            WidthRequest="40"
                                            HeightRequest="40"></Image>
                                    <Entry x:Name="Email"
                                            Placeholder="Email"
                                            HorizontalOptions="FillAndExpand"
                                            Text="{Binding EmailValue}"></Entry>
                                </StackLayout>
                            </Frame>

                            <Frame CornerRadius="5"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                    HasShadow="True"
                                    Margin="5"
                                    Padding="5">
                                <StackLayout Orientation="Horizontal">
                                    <Image Source="phone_number.png"
                                            Scale="0.7"
                                            WidthRequest="40"
                                            HeightRequest="40"></Image>
                                    <Entry x:Name="PhoneNumber"
                                            Placeholder="Phone Number"
                                            HorizontalOptions="FillAndExpand"
                                            Text="{Binding PhoneValue}"></Entry>
                                </StackLayout>
                            </Frame>

                            <StackLayout Margin="5"
                                    Padding="5"
                                    Orientation="Vertical">
                                <StackLayout Orientation="Horizontal"
                                        HorizontalOptions="FillAndExpand">
                                    <Label Text="Job Description"
                                            FontSize="18"
                                            FontAttributes="Bold"/>
                                    <Label Text="Required"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            
                                            HorizontalOptions="EndAndExpand"/>
                                </StackLayout>

                                <StackLayout Orientation="Horizontal">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding WorkExperienceLoadCommand}"/>
                                    </StackLayout.GestureRecognizers>
                                    <Image Source="portfolio.png"
                                            Scale="0.7"
                                            WidthRequest="50"
                                            HeightRequest="50"></Image>
                                    <StackLayout Orientation="Vertical"
                                            VerticalOptions="CenterAndExpand"
                                            HorizontalOptions="FillAndExpand">
                                        <Label Text="Add Work Experience"
                                                FontAttributes="Bold"
                                                />
                                        <Label Text="{Binding workExperienceFile}"
                                                FontSize="12"/>
                                    </StackLayout>
                                </StackLayout>

                                <BoxView HeightRequest="1"
                                        Color="LightGray"
                                        HorizontalOptions="FillAndExpand"/>
                            </StackLayout>

                            <StackLayout Margin="5"
                                    Padding="5"
                                    Orientation="Vertical">
                                <StackLayout Orientation="Horizontal"
                                        HorizontalOptions="FillAndExpand">
                                    <Label Text="Education History"
                                            FontSize="18"
                                            FontAttributes="Bold"/>
                                    <Label Text="Required"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            
                                            HorizontalOptions="EndAndExpand"/>
                                </StackLayout>

                                <StackLayout Orientation="Horizontal">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding CollegeLoadCommand}"/>
                                    </StackLayout.GestureRecognizers>
                                    <Image Source="graduation.png"
                                            Scale="0.7"
                                            WidthRequest="50"
                                            HeightRequest="50"></Image>
                                    <StackLayout Orientation="Vertical"
                                            VerticalOptions="CenterAndExpand"
                                            HorizontalOptions="FillAndExpand">
                                        <Label Text="Add Collage"
                                                FontAttributes="Bold"
                                                />
                                        <Label Text="{Binding collageFile}"
                                                FontSize="12"/>
                                    </StackLayout>
                                </StackLayout>

                                <StackLayout Orientation="Horizontal">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding HighSchoolLoadCommand}"/>
                                    </StackLayout.GestureRecognizers>
                                    <Image Source="high_school.png"
                                            Scale="0.7"
                                            WidthRequest="50"
                                            HeightRequest="50"></Image>
                                    <StackLayout Orientation="Vertical"
                                            VerticalOptions="CenterAndExpand"
                                            HorizontalOptions="FillAndExpand">
                                        <Label Text="Add High School"
                                                FontAttributes="Bold"
                                                />
                                        <Label Text="{Binding highSchoolFile}"
                                                FontSize="12"/>
                                    </StackLayout>
                                </StackLayout>

                                <BoxView HeightRequest="1"
                                        Color="LightGray"
                                        HorizontalOptions="FillAndExpand"/>
                            </StackLayout>

                            <StackLayout Margin="5"
                                    Padding="5"
                                    Orientation="Vertical">
                                <Frame
                                    Padding="10"
                                    BackgroundColor="Transparent"
                                    BorderColor="{StaticResource BorderColor}"
                                    CornerRadius="20"
                                    HasShadow="False"
                                    IsVisible="False">
                                    <Frame.Triggers>
                                        <DataTrigger
                                            Binding="{Binding isQuestionareVisible}"
                                            TargetType="Frame"
                                            Value="True">
                                            <Setter Property="IsVisible"
                                                    Value="True"/>
                                        </DataTrigger>
                                    </Frame.Triggers>
                                    <Grid>
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding OpenJobApplicationQuestions}"
                                                    CommandParameter="{Binding jobModel}"/>
                                        </Grid.GestureRecognizers>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image
                                            Margin="10,0,0,0"
                                            HorizontalOptions="Center"
                                            Source="questionnaire.png"
                                            VerticalOptions="Center"
                                            HeightRequest="30"
                                            WidthRequest="30">
                                            <Image.Triggers>
                                                <DataTrigger
                                                    Binding="{Binding isQuestionareFilled}"
                                                    TargetType="Image"
                                                    Value="True">
                                                    <Setter Property="Source"
                                                            Value="questionnaire_green.png"/>
                                                </DataTrigger>
                                            </Image.Triggers>
                                        </Image>
                                        <Label
                                            Grid.Column="1"
                                            Margin="20,0,0,0"
                                            Style="{StaticResource SubTextSemiBold}"
                                            Text="Questionnaire"
                                            VerticalOptions="Center"/>
                                        <Image
                                            Grid.Column="2"
                                            Margin="0,0,10,0"
                                            HorizontalOptions="Center"
                                            Source="Arrow"
                                            VerticalOptions="Center"
                                            HeightRequest="30"
                                            WidthRequest="30"/>
                                    </Grid>
                                </Frame>

                                <Label
                                    HorizontalOptions="CenterAndExpand"
                                    Text="{Binding jobModel.businessName, StringFormat='Your application will be shared with {0}, and may be sent to them on email. {0} will see who you are and your public info. \nYour information will be used according to CYA Application`s Data policy'}"
                                    
                                    FontSize="12"
                                    Padding="10,0,0,0"/>
                                <Label
                                    Text="CYA Application's Data policy"
                                    TextColor="Orange"
                                    FontSize="12"
                                    Padding="10"
                                    HorizontalOptions="CenterAndExpand"
                                    Margin="0,0,0,20">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="BtnPrivacyPolicy"/>
                                    </Label.GestureRecognizers>
                                </Label>
                                <BoxView HeightRequest="1"
                                        Color="LightGray"/>
                            </StackLayout>
                        </StackLayout>

                        <BoxView
                            AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1"
                            AbsoluteLayout.LayoutFlags="PositionProportional"
                            BackgroundColor="Transparent"/>

                        <ActivityIndicator
                            x:Name="ActivityIndicator"
                            AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1"
                            AbsoluteLayout.LayoutFlags="PositionProportional"
                            HorizontalOptions="CenterAndExpand"
                            IsRunning="False"
                            VerticalOptions="CenterAndExpand"/>
                    </Grid>
                </ScrollView>
            </RefreshView>

            <StackLayout Orientation="Horizontal"
                    Spacing="14"
                    Margin="0,0,0,0"
                    VerticalOptions="End"
                    BackgroundColor="Transparent">
                <Image Source="close_tab.png"
                        WidthRequest="50"
                        HorizontalOptions="Start">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Btn_Back"/>
                    </Image.GestureRecognizers>
                </Image>
                <Frame HorizontalOptions="FillAndExpand"
                         BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                        HeightRequest="50"
                        Margin="0,0,5,5">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SendJobApplicationForm}"/>
                    </Frame.GestureRecognizers>
                    <Label Text="Continue"
                            FontSize="14"
                            TextColor="White"
                            FontAttributes="Bold"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"/>
                </Frame>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>