<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Youth.Views.Quizzes.QuizQuestionsPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:Youth.ViewModels"
             xmlns:model="clr-namespace:Youth.Models"
             xmlns:utils="clr-namespace:Youth.Utils"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutItemIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             Shell.PresentationMode="Animated"
             Shell.TabBarIsVisible="False"
             xmlns:converters="clr-namespace:Youth.Helpers.Converters"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="true"
             xmlns:renderers="clr-namespace:Youth.CustomRenderers">

    <ContentPage.Resources>
        <Style TargetType="Frame">
            <Setter Property="HasShadow"
                    Value="False"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="CornerRadius"
                    Value="20"/>
            <Setter Property="IsClippedToBounds"
                    Value="True"/>
        </Style>
        <ResourceDictionary>
            <utils:MultiplierConverter x:Key="MultiplierConverter"/>
            <converters:IsCorrectAnsConverter x:Key="isCorrectAnsConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <StackLayout
                Orientation="Horizontal"
                VerticalOptions="Center"
                Spacing="10"
                Grid.Row="0"
                Margin="10,30,10,0">

                <Image
                    HorizontalOptions="Start"
                    HeightRequest="30"
                    Source="back.png"
                    BackgroundColor="transparent"
                    VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Btn_Back"/>
                    </Image.GestureRecognizers>
                </Image>

                <Label Text="{Binding Title}"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        Style="{StaticResource TabHeader}"/>
                <Image Source="settings.png"
                        HorizontalOptions="End"
                        HeightRequest="30"/>
            </StackLayout>

            <ScrollView VerticalScrollBarVisibility="Never"
                    VerticalOptions="FillAndExpand">
                <StackLayout Padding="10"
                        Orientation="Vertical">
                    <StackLayout
                        Orientation="Horizontal"
                        VerticalOptions="Center"
                        Spacing="10"
                        Grid.Row="0"
                        Margin="10,0,10,0">

                        <Label
                            HorizontalOptions="Start"
                            HeightRequest="30"
                            VerticalOptions="CenterAndExpand"
                            Style="{StaticResource TabHeader}">
                            <Label.Text>
                                <MultiBinding StringFormat="{}{0}/{1}">
                                    <Binding Path="activeQuestionPosition"/>
                                    <Binding Path="totalQuestions"/>
                                </MultiBinding>
                            </Label.Text>
                        </Label>

                        <Label
                            Text="{Binding totalScore}"
                            HeightRequest="30"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="Center"
                            Style="{StaticResource TabHeader}"
                            Margin="10"/>
                    </StackLayout>

                    <Label
                        Text="{Binding activeQuestion.points, StringFormat='{0} Points'}"
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource TabHeader}"
                        Padding="15"/>

                    <Label Text="{Binding activeQuestion.question}"
                           HorizontalOptions="CenterAndExpand"
                           HorizontalTextAlignment="Center"
                           Style="{StaticResource TabHeader}"
                           Margin="10"/>

                    <StackLayout Orientation="Vertical">
                        <StackLayout Orientation="Vertical">
                            <StackLayout.Triggers>
                                <DataTrigger
                                    Binding="{Binding nextPending}"
                                    TargetType="StackLayout"
                                    Value="False">
                                    <Setter Property="IsVisible"
                                            Value="False"/>
                                </DataTrigger>
                            </StackLayout.Triggers>

                            <StackLayout BindableLayout.ItemsSource="{Binding activeQuestion.answers}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="model:QuizQuestionAnswer">
                                        <Frame
                                            Margin="10,10,10,0"
                                            Padding="10"
                                            BackgroundColor="Transparent"
                                            BorderColor="{StaticResource BorderColor}"
                                            CornerRadius="20"
                                            HasShadow="False">

                                            <Frame.Triggers>
                                                <DataTrigger
                                                    Binding="{Binding ., Converter={StaticResource isCorrectAnsConverter}}"
                                                    TargetType="Frame"
                                                    Value="True">
                                                    <Setter Property="BorderColor"
                                                            Value="{StaticResource Green}"/>
                                                </DataTrigger>
                                            </Frame.Triggers>

                                            <Label
                                                Grid.Column="0"
                                                VerticalOptions="Center"
                                                HorizontalOptions="CenterAndExpand"
                                                Style="{StaticResource TabHeader}"
                                                Text="{Binding answer}"
                                                HorizontalTextAlignment="Center"/>
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>
                        </StackLayout>

                        <StackLayout Orientation="Vertical">
                            <StackLayout.Triggers>
                                <DataTrigger
                                    Binding="{Binding nextPending}"
                                    TargetType="StackLayout"
                                    Value="True">
                                    <Setter Property="IsVisible"
                                            Value="False"/>
                                </DataTrigger>
                            </StackLayout.Triggers>

                            <CollectionView ItemsSource="{Binding activeQuestion.answers}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="model:QuizQuestionAnswer">
                                        <Frame
                                            Margin="10,10,10,0"
                                            Padding="10"
                                            BackgroundColor="Transparent"
                                            BorderColor="{StaticResource BorderColor}"
                                            CornerRadius="20"
                                            HasShadow="False">

                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:QuizQuestionsViewModel}}, Path=QuizAnsListTap}" CommandParameter="{Binding .}" />
                                            </Frame.GestureRecognizers>


                                            <Label
                                                Grid.Column="0"
                                                VerticalOptions="Center"
                                                HorizontalOptions="CenterAndExpand"
                                                Style="{StaticResource TabHeader}"
                                                Text="{Binding answer}"
                                                HorizontalTextAlignment="Center"/>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </ScrollView>

            <StackLayout Orientation="Horizontal"
                    Spacing="14"
                    Margin="0,0,0,0"
                    VerticalOptions="End"
                    BackgroundColor="Transparent">
                <Image Source="share_color.png"
                        WidthRequest="50"
                        HorizontalOptions="Start"/>
                <Frame HorizontalOptions="FillAndExpand"
                        BackgroundColor="{StaticResource Gray-100}"
                        HeightRequest="50"
                        Margin="0,0,5,5">
                    <Frame.Triggers>
                        <DataTrigger
                            Binding="{Binding nextPending}"
                            TargetType="Frame"
                            Value="True">
                            <Setter Property="BackgroundColor"
                                    Value="#763F00"/>
                        </DataTrigger>
                    </Frame.Triggers>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenNextQuestion}"
                                CommandParameter="{Binding EventDetails}"/>
                    </Frame.GestureRecognizers>
                    <Label Text="Next"
                            FontSize="14"
                            FontAttributes="Bold"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"/>
                </Frame>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>