<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Youth.Views.Events.EventApplicationPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:Youth.ViewModels"
             xmlns:model="clr-namespace:Youth.Models"
             xmlns:utils="clr-namespace:Youth.Utils"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutItemIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             Shell.TabBarIsVisible="False"
             Shell.PresentationMode="Animated"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="true"
             xmlns:renderers="clr-namespace:Youth.CustomRenderers"
             xmlns:converters="clr-namespace:Youth.Helpers.Converters">

    <ContentPage.Resources>
        <Style TargetType="Frame">
            <Setter Property="HasShadow"
                    Value="False"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="CornerRadius"
                    Value="20"/>
            <Setter Property="IsClippedToBounds"
                    Value="True"/>
        </Style>
        <ResourceDictionary>
            <converters:IsStringNullConverter x:Key="isStringNullConverter"/>
            <converters:IsImageSourceConverter x:Key="isImageSourceConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <StackLayout>
            <StackLayout
                Orientation="Horizontal"
                VerticalOptions="Center"
                Spacing="10"
                Grid.Row="0"
                Margin="10,20,10,0">

                <Image
                    HorizontalOptions="Start"
                    HeightRequest="30"
                    Source="back.png"
                    BackgroundColor="transparent"
                    VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Btn_Back"/>
                    </Image.GestureRecognizers>
                </Image>

                <Label Text="{Binding Title}"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        
                        Style="{StaticResource TabHeader}"/>
                <Image Source="settings.png"
                        HorizontalOptions="End"
                        HeightRequest="30"/>
            </StackLayout>


            <ScrollView VerticalScrollBarVisibility="Never"
                    VerticalOptions="FillAndExpand">
                <StackLayout Padding="10,10,10,10"
                        Spacing="10">

                    <Label
                        IsVisible="{Binding mEventTicketModule.onDiscount}"
                        TextColor="Red"
                        FontSize="20"
                        TextDecorations="Strikethrough"
                        HorizontalOptions="CenterAndExpand"
                        FontAttributes="Bold">
                        <Label.Text>
                            <MultiBinding StringFormat="{}{0} {1}">
                                <Binding Path="mEventTicketModule.currency"/>
                                <Binding Path="mEventTicketModule.amount"/>
                            </MultiBinding>
                        </Label.Text>
                    </Label>

                    <Label
                        IsVisible="{Binding mEventTicketModule.onDiscount}"
                        FontSize="34"
                        HorizontalOptions="CenterAndExpand"
                        FontAttributes="Bold">
                        <Label.Text>
                            <MultiBinding StringFormat="{}{0} {1}">
                                <Binding Path="mEventTicketModule.currency"/>
                                <Binding Path="mEventTicketModule.discountPrice"/>
                            </MultiBinding>
                        </Label.Text>
                    </Label>

                    <Label
                        IsVisible="{Binding mEventTicketModule.offerDiscount}"
                        FontSize="34"
                        HorizontalOptions="CenterAndExpand"
                        FontAttributes="Bold">
                        <Label.Text>
                            <MultiBinding StringFormat="{}{0} {1}">
                                <Binding Path="mEventTicketModule.currency"/>
                                <Binding Path="mEventTicketModule.amount"/>
                            </MultiBinding>
                        </Label.Text>
                    </Label>

                    <Label
                        Text="{Binding mEventTicketModule.label}"
                        FontAttributes="Bold"
                        FontSize="25"
                        HorizontalOptions="CenterAndExpand"
                        HorizontalTextAlignment="Center"/>

                    <Frame
                        Margin="5"
                        Padding="5,5,5,5"
                        BackgroundColor="Transparent"
                        BorderColor="{StaticResource BorderColor}"
                        CornerRadius="20"
                        HasShadow="False"
                        IsVisible="{Binding isColorOptionsVisible}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenEventTicketsProviderCommand}"/>
                        </Frame.GestureRecognizers>
                        <Grid Padding="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image
                                VerticalOptions="Center"
                                Margin="10,0,0,0"
                                HorizontalOptions="Center"
                                   Source="{Binding imageUrl, Converter={StaticResource isImageSourceConverter}}"
                                HeightRequest="40"
                                WidthRequest="40">

                                <Image.Triggers>
                                    <DataTrigger
                                        Binding="{Binding mEventTicketModule.imageUrl, Converter={StaticResource isStringNullConverter}}"
                                        TargetType="Image"
                                        Value="True">
                                        <Setter Property="Source"
                                                Value="ballot.png"/>
                                    </DataTrigger>
                                </Image.Triggers>
                            </Image>

                            <Label
                                Grid.Column="1"
                                Margin="20,0,0,0"
                                Style="{StaticResource SubTextSemiBold}"
                                Text="{Binding mEventTicketModule.label}"
                                VerticalOptions="Center"/>
                            <Image
                                Grid.Column="2"
                                Margin="0,0,10,0"
                                HorizontalOptions="Center"
                                Source="right_arrow.png"
                                VerticalOptions="Center"
                                HeightRequest="20"
                                WidthRequest="20"/>
                        </Grid>
                    </Frame>

                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <BoxView/>
                        <Frame CornerRadius="10">
                            <Frame CornerRadius="10"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                    HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding IncrementCartCommand}"/>
                                </Frame.GestureRecognizers>
                                <Label
                                    VerticalOptions="CenterAndExpand"
                                    HorizontalOptions="CenterAndExpand"
                                    FontSize="30"
                                    Text="+"
                                    FontAttributes="Bold"/>
                            </Frame>
                        </Frame>

                        <BoxView Grid.Column="1"/>
                        <Frame CornerRadius="10"
                                Grid.Column="1"
                                Padding="2">
                            <Frame CornerRadius="10"
                                    Padding="10"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                    HasShadow="False">
                                <Label
                                    VerticalOptions="Center"
                                    HorizontalOptions="CenterAndExpand"
                                    Style="{StaticResource SubTextSemiBold}"
                                    Text="{Binding cartCount}"
                                    
                                    FontAttributes="Bold"/>
                            </Frame>
                        </Frame>

                        <BoxView Grid.Column="2"/>
                        <Frame CornerRadius="10"
                                Grid.Column="2">
                            <Frame CornerRadius="10"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                    HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding DecrementCartCommand}"/>
                                </Frame.GestureRecognizers>
                                <Label
                                    VerticalOptions="CenterAndExpand"
                                    HorizontalOptions="CenterAndExpand"
                                    FontSize="30"
                                    Text="-"
                                    FontAttributes="Bold"/>
                            </Frame>
                        </Frame>
                    </Grid>

                    <Label
                        FontSize="34"
                        HorizontalOptions="CenterAndExpand"
                        FontAttributes="Bold">
                        <Label.Text>
                            <MultiBinding StringFormat="{}{0} {1}">
                                <Binding Path="systemSettings.currency"/>
                                <Binding Path="priceToPay"/>
                            </MultiBinding>
                        </Label.Text>
                    </Label>
                </StackLayout>
            </ScrollView>

            <Frame
                VerticalOptions="End"
                Margin="5"
                Padding="5,5,5,5"
                CornerRadius="20"
                HasShadow="True">
                <Grid Padding="5">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PickHealthCenterCommand}"/>
                    </Grid.GestureRecognizers>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image
                        Margin="10,10,0,0"
                        HorizontalOptions="Center"
                        Source="info.png"
                        VerticalOptions="Start"
                        HeightRequest="40"
                        WidthRequest="40"/>

                    <Label
                        Grid.Column="1"
                        Margin="20,0,0,0"
                        Style="{StaticResource SubTextSemiBold}"
                        Text="{Binding  mEventTicketModule.description}"
                        VerticalOptions="Center"/>
                </Grid>
            </Frame>

            <StackLayout Spacing="14"
                    Margin="0,0,0,0"
                    VerticalOptions="End"
                    BackgroundColor="Transparent">
                <Grid  Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <BoxView/>
                    <Frame CornerRadius="10"
                            Padding="2">
                        <Frame HorizontalOptions="FillAndExpand"
                                BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                HeightRequest="50">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding AddToCartCommand}"/>
                            </Frame.GestureRecognizers>
                            <Label Text="Add To Cart"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"/>
                        </Frame>
                    </Frame>

                    <BoxView Grid.Column="1"/>
                    <Frame CornerRadius="10"
                            Grid.Column="1"
                            Padding="2">
                        <Frame HorizontalOptions="FillAndExpand"
                                BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                HeightRequest="50">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BuyMowCommand}"/>
                            </Frame.GestureRecognizers>
                            <Label Text="Buy Now"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"/>
                        </Frame>
                    </Frame>
                </Grid>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>