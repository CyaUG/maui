<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Youth.Views.Shopping.DeliveryInfoProviderPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:Youth.ViewModels"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutItemIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             NavigationPage.HasNavigationBar="False"
             Shell.PresentationMode="Animated"
             Shell.TabBarIsVisible="False"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="True">


    <ContentPage.Resources>
        <Style TargetType="Frame">
            <Setter Property="HasShadow"
                    Value="False"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="CornerRadius"
                    Value="20"/>
            <Setter Property="IsClippedToBounds"
                    Value="True"/>
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>
            <StackLayout
                Orientation="Horizontal"
                VerticalOptions="Center"
                Spacing="10"
                Grid.Row="0"
                Margin="10,20,10,0">

                <Image
                    HorizontalOptions="StartAndExpand"
                    HeightRequest="30"
                    Source="back.png"
                    BackgroundColor="transparent"
                    VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Btn_Back"/>
                    </Image.GestureRecognizers>
                </Image>

                <Image Source="Search"
                        HorizontalOptions="EndAndExpand"
                        HeightRequest="30">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OpenSearchPage"/>
                    </Image.GestureRecognizers>
                </Image>
                <Image Source="shopping_cart"
                        HorizontalOptions="End"
                        HeightRequest="30">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OpenShoppingCart"/>
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>

            <RefreshView x:DataType="local:DeliveryInfoProviderViewModel"
                    Command="{Binding LoadAccountCommand}"
                    IsRefreshing="{Binding IsBusy}">
                <StackLayout Orientation="Vertical">
                    <ScrollView VerticalScrollBarVisibility="Never">
                        <StackLayout Orientation="Vertical">

                            <Image HeightRequest="200"
                                    Source="package_delivery"
                                    Aspect="AspectFill"
                                    HorizontalOptions="FillAndExpand"/>

                            <StackLayout Orientation="Vertical"
                                    Padding="10">
                                <Label Text="Delivery Info"
                                        FontAttributes="Bold"
                                        FontSize="34"/>

                                <Label Text="Contact Name"
                                        HorizontalOptions="Start"
                                        FontSize="12"
                                        FontAttributes="Bold"
                                        Margin="15,0,0,0"/>
                                <Frame CornerRadius="5"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                        HasShadow="True"
                                        Margin="5"
                                        Padding="5">
                                    <StackLayout Orientation="Horizontal">
                                        <Image Source="profile_icon.png"
                                                Scale="0.7"
                                                WidthRequest="40"
                                                HeightRequest="40"></Image>
                                        <Entry Placeholder="Eg. Alex Wagaana"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{Binding NameValue}"></Entry>
                                    </StackLayout>
                                </Frame>

                                <Label Text="Contact Phone Number"
                                        HorizontalOptions="Start"
                                        FontSize="12"
                                        FontAttributes="Bold"
                                        Margin="15,0,0,0"/>
                                <Frame CornerRadius="5"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                        HasShadow="True"
                                        Margin="5"
                                        Padding="5">
                                    <StackLayout Orientation="Horizontal">
                                        <Image Source="phone_number.png"
                                                Scale="0.7"
                                                WidthRequest="40"
                                                HeightRequest="40"></Image>
                                        <Entry Placeholder="Eg. 0934567890"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{Binding PhoneValue}"></Entry>
                                    </StackLayout>
                                </Frame>

                                <Label Text="Pick Your Location"
                                        HorizontalOptions="Start"
                                        FontSize="12"
                                        FontAttributes="Bold"
                                        Margin="15,0,0,0"/>
                                <Frame Margin="5"
                                        Padding="5"
                                        BackgroundColor="Transparent"
                                        BorderColor="{StaticResource BorderColor}"
                                        CornerRadius="20"
                                        HasShadow="False">
                                    <Grid Padding="5">
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OpenLocationProviderCommand"/>
                                        </Grid.GestureRecognizers>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image
                                            Margin="10,0,0,0"
                                            HorizontalOptions="Center"
                                            Source="gps_point.png"
                                            VerticalOptions="Center"
                                            HeightRequest="30"
                                            WidthRequest="30">
                                            <Image.Triggers>
                                                <DataTrigger
                                                    Binding="{Binding isQuestionareFilled}"
                                                    TargetType="Image"
                                                    Value="True">
                                                    <Setter Property="Source"
                                                            Value="gps_green.png"/>
                                                </DataTrigger>
                                            </Image.Triggers>
                                        </Image>
                                        <Label
                                            Grid.Column="1"
                                            Margin="20,0,0,0"
                                            Style="{StaticResource SubTextSemiBold}"
                                            Text="{Binding LocationAddress}"
                                            VerticalOptions="Center"/>
                                        <Image
                                            Grid.Column="2"
                                            Margin="0,0,10,0"
                                            HorizontalOptions="Center"
                                            Source="Arrow"
                                            VerticalOptions="Center"
                                            HeightRequest="30"
                                            WidthRequest="30"/>
                                    </Grid>
                                </Frame>

                                <Label Text="Apt/Suite/Unit/House Direction"
                                        HorizontalOptions="Start"
                                        FontSize="12"
                                        FontAttributes="Bold"
                                        Margin="15,0,0,0"/>
                                <Frame CornerRadius="5"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                        HasShadow="True"
                                        Margin="5"
                                        Padding="5">
                                    <StackLayout Orientation="Horizontal">
                                        <Image Source="home.png"
                                                Scale="0.7"
                                                WidthRequest="40"
                                                HeightRequest="40"></Image>
                                        <Entry Placeholder="Eg. Second Flow, Room 12"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{Binding DirectionsValue}"></Entry>
                                    </StackLayout>
                                </Frame>

                                <Frame HorizontalOptions="FillAndExpand"
                                         BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                        HeightRequest="50"
                                        Margin="10,10,10,10">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SetAddressCommand}"/>
                                    </Frame.GestureRecognizers>
                                    <Label Text="Set Address"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Center"/>
                                </Frame>
                            </StackLayout>
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </RefreshView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>