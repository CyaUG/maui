<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Youth.Views.Events.EventConfigPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:Youth.ViewModels"
             xmlns:model="clr-namespace:Youth.Models"
             xmlns:utils="clr-namespace:Youth.Utils"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutItemIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             Shell.PresentationMode="Animated"
             Shell.TabBarIsVisible="False"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:toolkitViews="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             ios:Page.UseSafeArea="true"
             xmlns:renderers="clr-namespace:Youth.CustomRenderers"
             xmlns:converters="clr-namespace:Youth.Helpers.Converters">

    <ContentPage.Resources>
        <Style TargetType="Frame">
            <Setter Property="HasShadow"
                    Value="False"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="CornerRadius"
                    Value="20"/>
            <Setter Property="IsClippedToBounds"
                    Value="True"/>
        </Style>
        <ResourceDictionary>
            <utils:MultiplierConverter x:Key="MultiplierConverter"/>
            <converters:IsImageSourceConverter x:Key="isImageSourceConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <StackLayout>
            <StackLayout
                Orientation="Horizontal"
                VerticalOptions="Center"
                Spacing="10"
                Grid.Row="0"
                Margin="10,20,10,10">

                <Image
                    HorizontalOptions="Start"
                    HeightRequest="30"
                    Source="back.png"
                    BackgroundColor="transparent"
                    VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Btn_Back"/>
                    </Image.GestureRecognizers>
                </Image>

                <Label Text="{Binding Title}"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        
                        Style="{StaticResource TabHeader}"/>
                <Image Source="settings.png"
                        HorizontalOptions="End"
                        HeightRequest="30"/>
            </StackLayout>

            <ScrollView VerticalScrollBarVisibility="Never" VerticalOptions="FillAndExpand">

                <StackLayout Orientation="Vertical">

                    <Image Source="{Binding EventDetails.imageUrl, Converter={StaticResource isImageSourceConverter}}"
                                   HorizontalOptions="FillAndExpand"
                                   VerticalOptions="CenterAndExpand"
                                   Aspect="AspectFill"
                                   Margin="0"/>

                    <VerticalStackLayout Padding="10">
                        <Label
                                    Margin="5,0,0,0"
                                    Style="{StaticResource SubTextSemiBold}"
                                    VerticalOptions="Center"
                                    Text="Total Sales"
                                    HorizontalOptions="CenterAndExpand"
                                    HorizontalTextAlignment="Center"/>

                        <Label
                                    FontAttributes="Bold"
                                    HorizontalOptions="CenterAndExpand"
                                    HorizontalTextAlignment="Center"
                                    FontSize="34">
                            <Label.Text>
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="systemSettings.currency"/>
                                    <Binding Path="EventDetails.totalSales"/>
                                </MultiBinding>
                            </Label.Text>
                        </Label>

                        <StackLayout Spacing="15">
                            <Grid ColumnSpacing="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <BoxView/>
                                <Frame CornerRadius="10"
                                                    Padding="10"
                                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                                    HasShadow="True">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding OpemEventPosPageCommand}"/>
                                    </Frame.GestureRecognizers>
                                    <StackLayout Orientation="Vertical">
                                        <Image
                                                        Margin="5,0,0,0"
                                                        HorizontalOptions="CenterAndExpand"
                                                        Source="qrcode.png"
                                                        HeightRequest="20"
                                                        WidthRequest="20"
                                                        VerticalOptions="Center"/>
                                        <Label
                                                        HorizontalOptions="CenterAndExpand"
                                                        Margin="5,0,0,0"
                                                        Style="{StaticResource SubTextSemiBold}"
                                                        VerticalOptions="Center"
                                                        MaxLines="1"
                                                        Text="POS"
                                                        />
                                    </StackLayout>
                                </Frame>

                                <BoxView Grid.Column="1"/>
                                <Frame CornerRadius="10" Grid.Column="1"
                                                    Padding="10"
                                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                                    HasShadow="True">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding OpemEventMgmtPageCommand}"/>
                                    </Frame.GestureRecognizers>
                                    <StackLayout>
                                        <Image
                                                        Margin="5,0,0,0"
                                                        HorizontalOptions="CenterAndExpand"
                                                        Source="search_user.png"
                                                        HeightRequest="20"
                                                            WidthRequest="20"
                                                        VerticalOptions="Center"/>
                                        <Label
                                                        HorizontalOptions="CenterAndExpand"
                                                        Margin="5,0,0,0"
                                                        Style="{StaticResource SubTextSemiBold}"
                                                        VerticalOptions="Center"
                                                        Text="Mgmt"
                                                        MaxLines="1"
                                                        />
                                    </StackLayout>
                                </Frame>

                                <BoxView Grid.Column="2"/>
                                <Frame CornerRadius="10" Grid.Column="2"
                                                    Padding="10"
                                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                                    HasShadow="True">
                                    <StackLayout>
                                        <Image
                                                        Margin="5,0,0,0"
                                                        HorizontalOptions="CenterAndExpand"
                                                        Source="share.png"
                                                        HeightRequest="20"
                                                            WidthRequest="20"
                                                        VerticalOptions="Center"/>
                                        <Label
                                                        HorizontalOptions="CenterAndExpand"
                                                        Margin="5,0,0,0"
                                                        VerticalOptions="Center"
                                                        Style="{StaticResource SubTextSemiBold}"
                                                        Text="Share"
                                                        MaxLines="1"
                                                        />
                                    </StackLayout>
                                </Frame>

                                <BoxView Grid.Column="3"/>
                                <Frame CornerRadius="10" Grid.Column="3"
                                                    Padding="10"
                                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource Background_Mid}}"
                                                    HasShadow="True">
                                    <StackLayout>
                                        <Image
                                                        Margin="5,0,0,0"
                                                        HorizontalOptions="CenterAndExpand"
                                                        Source="bin.png"
                                                        HeightRequest="20"
                                                            WidthRequest="20"
                                                        VerticalOptions="Center"/>
                                        <Label
                                                        HorizontalOptions="CenterAndExpand"
                                                        Margin="5,0,0,0"
                                                        VerticalOptions="Center"
                                                        Style="{StaticResource SubTextSemiBold}"
                                                        Text="Delete"
                                                        MaxLines="1"
                                                        />
                                    </StackLayout>
                                </Frame>

                            </Grid>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <BoxView/>
                                <Frame CornerRadius="10"
                                                Padding="2,0,2,0" BackgroundColor="Transparent">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label
                                                    Margin="0,0,0,0"
                                                    Style="{StaticResource SubTextSemiBold}"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="Start"
                                                    Text="{Binding EventDetails.likes}"
                                                    />
                                        <Label
                                                    Grid.Column="1"
                                                    Margin="5,0,0,0"
                                                    Style="{StaticResource SubTextSemiBold}"
                                                    VerticalOptions="Center"
                                                    Text="Likes"/>
                                    </Grid>
                                </Frame>

                                <BoxView Grid.Column="2"
                                                HorizontalOptions="End"/>
                                <Frame CornerRadius="10"
                                                Grid.Column="2"
                                                Padding="2,0,2,0"
                                                HorizontalOptions="End" BackgroundColor="Transparent">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label
                                                    Margin="0,0,0,0"
                                                    VerticalOptions="Center"
                                                    Style="{StaticResource SubTextSemiBold}"
                                                    Text="{Binding EventDetails.totalComments}"
                                                    
                                                    HorizontalOptions="End"/>
                                        <Label
                                                    Grid.Column="1"
                                                    Margin="5,0,0,0"
                                                    VerticalOptions="Center"
                                                    Style="{StaticResource SubTextSemiBold}"
                                                    Text="Comment"
                                                    HorizontalOptions="End"/>
                                    </Grid>
                                </Frame>
                            </Grid>

                            <Label Text="{Binding EventDetails.eventTitle}"
                                            FontAttributes="Bold"
                                            FontSize="30"/>

                            <Grid HeightRequest="70">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition  Width="*"/>
                                    <ColumnDefinition  Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Image
                                                Margin="0,0,0,0"
                                                VerticalOptions="Center"
                                                HorizontalOptions="Start"
                                                Source="calendar.png"
                                                HeightRequest="30"
                                                WidthRequest="30"/>
                                    <Label
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                Style="{StaticResource SubTextSemiBold}"
                                                VerticalOptions="Center"
                                                Text="{Binding EventDetails.eventDate}"/>
                                </Grid>

                                <Grid Grid.Column="2"
                                                HorizontalOptions="End">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image
                                                Margin="0,0,0,0"
                                                VerticalOptions="Center"
                                                HorizontalOptions="End"
                                                Source="search_user.png"
                                                HeightRequest="30"
                                                WidthRequest="30"/>

                                    <Label
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                VerticalOptions="Center"
                                                Style="{StaticResource SubTextSemiBold}"
                                                Text="{Binding EventDetails.interested, StringFormat='{0} Going'}"
                                                HorizontalOptions="End"/>
                                </Grid>
                            </Grid>

                            <Label Text="Job Description"
                                            FontSize="12"
                                            FontAttributes="Bold"/>

                            <Label Text="{Binding EventDetails.description}"
                                            FontSize="14"/>

                            <Label Text="Address"
                                            FontSize="12"
                                            FontAttributes="Bold" />

                            <Frame CornerRadius="10"
                                            HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding EventAddressTap}"
                                                    CommandParameter="{Binding EventDetails}"/>
                                </Frame.GestureRecognizers>
                                <Grid>
                                    <Image Source="{Binding EventDetails.event_address_image, Converter={StaticResource isImageSourceConverter}}"
                                                HeightRequest="170"
                                                HorizontalOptions="FillAndExpand"
                                                Aspect="AspectFill">
                                    </Image>
                                </Grid>
                            </Frame>

                            <StackLayout Orientation="Horizontal"
                                            Spacing="14">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding EventAddressTap}"
                                                    CommandParameter="{Binding EventDetails}"/>
                                </StackLayout.GestureRecognizers>
                                <Image Source="address.png"
                                                WidthRequest="30"
                                                HorizontalOptions="Start"/>
                                <Label Text="{Binding EventDetails.event_address}"
                                                FontSize="14"
                                                VerticalOptions="Center"/>
                            </StackLayout>

                            <Label Text="Listed By"
                                            FontSize="12"
                                            FontAttributes="Bold" />

                            <StackLayout Orientation="Horizontal">
                                <StackLayout Margin="5,0,20,0">
                                    <toolkitViews:AvatarView BorderWidth="0" HeightRequest="50" WidthRequest="50" BackgroundColor="Transparent" CornerRadius="10" ImageSource="{Binding EventDetails.profile_picture, Converter={StaticResource isImageSourceConverter}}"
                                                                HorizontalOptions="FillAndExpand"
                                                                VerticalOptions="FillAndExpand"
                                                                Margin="5">
                                        <toolkitViews:AvatarView.Shadow>
                                            <Shadow Opacity="0.3"/>
                                        </toolkitViews:AvatarView.Shadow>
                                    </toolkitViews:AvatarView>
                                </StackLayout>

                                <StackLayout VerticalOptions="Center">
                                    <Label
                                                FontAttributes="Bold"
                                                FontSize="Small"
                                                Text="{Binding EventDetails.name}"
                                                VerticalOptions="Center"/>
                                    <Label
                                                FontSize="Small"
                                                Text="{Binding EventDetails.user_name, StringFormat='@{0}'}"
                                                VerticalOptions="Center"/>
                                </StackLayout>
                            </StackLayout>

                        </StackLayout>
                    </VerticalStackLayout>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>